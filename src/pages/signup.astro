---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sign Up - Bolt Blog">
  <main>
    <div class="signup-container">
      <div class="signup-box">
        <h1>Sign Up</h1>
        <form class="signup-form">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
          </div>
          <button type="submit" class="signup-button">Sign Up</button>
        </form>
        <p class="signin-link">
          Already have an account? <a href="/signin">Sign in</a>
        </p>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    padding: 2rem;
    color: black;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: calc(100vh - 120px);
  }

  .signup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    width: 100%;
  }

  .signup-box {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
  }

  h1 {
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  .signup-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-size: 0.9rem;
    color: #555;
  }

  input {
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }

  input:focus {
    outline: none;
    border-color: #007bff;
  }

  .signup-button {
    background-color: #000;
    color: white;
    padding: 0.75rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .signup-button:hover {
    background-color: #333;
  }

  .signin-link {
    text-align: center;
    margin-top: 1.5rem;
    font-size: 0.9rem;
    color: #666;
  }

  .signin-link a {
    color: #007bff;
    text-decoration: none;
  }

  .signin-link a:hover {
    text-decoration: underline;
  }
</style>
