---
import Layout from '../layouts/Layout.astro';
import SignUp from '../components/SignUp.jsx';
import '../../src/styles/background.css';
---

<Layout title="Sign Up - Bolt Blog">
  <main>
    <SignUp client:only="react" />
  </main>
</Layout>

<style>
  main {
    background-image: url('https://bibliolifestyle.com/wp-content/uploads/2022/02/10-Reasons-Why-Libraries-Are-Important-2048x1152.jpeg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: rgba(255, 255, 255, 0.05); /* Very light and transparent */
    padding: 2rem;
    color: black;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: calc(100vh - 120px); /* Adjust based on header and footer height */
  }

  .signup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    width: 100%;
  }

  .signup-box {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
  }

  h1 {
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  .signup-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-size: 0.9rem;
    color: #555;
  }

  input {
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }

  input:focus {
    outline: none;
    border-color: #007bff;
  }

  .signup-button {
    background-color: #000;
    color: white;
    padding: 0.75rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .signup-button:hover {
    background-color: #333;
  }

  .signin-link {
    text-align: center;
    margin-top: 1.5rem;
    font-size: 0.9rem;
    color: #666;
  }

  .signin-link a {
    color: #007bff;
    text-decoration: none;
  }

  .signin-link a:hover {
    text-decoration: underline;
  }

  .error-message {
    color: red;
    font-size: 0.8rem;
    margin-top: 0.25rem;
  }

  .success-message {
    color: green;
    text-align: center;
    margin-top: 1rem;
  }
</style>
