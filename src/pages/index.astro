---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const posts = [
  { title: 'First Post', slug: '/posts/first-post' },
  { title: 'Second Post', slug: '/posts/second-post' }
];
---

<style>
  main {
    background-image: url('https://upload.wikimedia.org/wikipedia/commons/thumb/4/4c/Libraries_of_congress_2013.jpg/1920px-Libraries_of_congress_2013.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: rgba(255, 255, 255, 0.1); /* Semi-transparent white background */
    padding: 2rem;
    color: black;
  }

  main h1 {
    margin-top: 0;
  }

  main ul {
    list-style-type: none;
    padding: 0;
  }

  main li {
    margin-bottom: 1rem;
  }

  main a {
    text-decoration: none;
    color: #282c34;
    transition: color 0.3s ease;
  }

  main a:hover {
    color: #61dafb;
  }
</style>

<Header />
<main>
  <h1>Welcome to My Blog</h1>
  <ul>
    {posts.map(post => (
      <li><a href={post.slug}>{post.title}</a></li>
    ))}
  </ul>
</main>
<Footer />
