---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';

const posts = [
  { title: 'First Post', slug: '/posts/first-post' },
  { title: 'Second Post', slug: '/posts/second-post' }
];
---

<Layout title="Welcome to My Blog" posts={posts}>
  <main>
    <div class="main-container">
      <div class="main-box">
        <h1>Welcome to My Blog</h1>
        <ul>
          {posts.map(post => (
            <li><a href={post.slug}>{post.title}</a></li>
          ))}
        </ul>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    padding: 2rem;
    color: black;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: calc(100vh - 120px);
  }

  .main-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    width: 100%;
  }

  .main-box {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
  }

  main h1 {
    margin-top: 0;
    text-align: center;
  }

  main ul {
    list-style-type: none;
    padding: 0;
  }

  main li {
    margin-bottom: 1rem;
  }

  main a {
    text-decoration: none;
    color: #282c34;
    transition: color 0.3s ease;
  }

  main a:hover {
    color: #61dafb;
  }
</style>
