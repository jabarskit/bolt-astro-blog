---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/background.css';

const posts = [
  { title: 'First Post', slug: '/posts/first-post' },
  { title: 'Second Post', slug: '/posts/second-post' }
];
---

<style>
  main h1 {
    margin-top: 0;
    text-align: center;
  }

  .create-post-button {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #61dafb;
    color: #282c34;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    margin-bottom: 20px;
  }

  .create-post-button:hover {
    background-color: white;
    color: #282c34;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 800px; /* Adjust as needed */
  }

  .post-card {
    background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
    border-radius: 15px;
    padding: 1.5rem;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin-bottom: 1.5rem;
    width: 90%;
    position: relative;
    overflow: hidden;
  }

  .post-card:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    z-index: 0;
    border-radius: 15px;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
  }

  .post-card a {
    text-decoration: none;
    color: #282c34;
    font-weight: bold;
    display: block;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  @media (max-width: 600px) {
    .post-card {
      width: 100%;
    }
  }
</style>

<Header />
<main>
  <h1>Welcome to My Blog</h1>
  <a href="/create-post" class="create-post-button">Create New Post</a>
  <div class="post-list">
    {posts.map(post => (
      <div class="post-card">
        <a href={post.slug}>{post.title}</a>
      </div>
    ))}
  </div>
</main>
<Footer />
